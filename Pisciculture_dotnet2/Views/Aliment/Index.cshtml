@model IEnumerable<Pisciculture_dotnet2.Models.Aliment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomAliment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PourcentageProteine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PourcentageGlucide)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixAchatKg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomAliment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PourcentageProteine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PourcentageGlucide)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixAchatKg)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAliment">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAliment">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAliment">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
