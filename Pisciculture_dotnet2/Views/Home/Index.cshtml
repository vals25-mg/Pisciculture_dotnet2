@model (List<DoboInfos> ChiffresAffaires, List<ResultatNourrissage> Depenses)

@{
    ViewData["Title"] = "Accueil";
}

<div class="container">
    <form method="get" asp-action="Index" class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <label for="dateNourrissage" class="form-label">Filtrer par date:</label>
                <input type="date"
                       id="dateNourrissage"
                       name="dateNourrissage"
                       class="form-control"
                       value="@ViewBag.DateNourrissage?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Filtrer</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Réinitialiser</a>
            </div>
        </div>
    </form>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Chiffre d'Affaires Total</h6>
                    <h3 class="text-primary mb-0">
                        @if (ViewBag.CA != null)
                        {
                            @(((double)ViewBag.CA).ToString("N2")) <text>Ar</text>
                        }
                        else
                        {
                            <text>0.00 Ar</text>
                        }
                    </h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Prix d'Achat Total</h6>
                    <h3 class="text-warning mb-0">
                        @if (ViewBag.PrixAchatTotal != null)
                        {
                            @(((double)ViewBag.PrixAchatTotal).ToString("N2")) <text>Ar</text>
                        }
                        else
                        {
                            <text>0.00 Ar</text>
                        }
                    </h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-@(ViewBag.Benefice >= 0 ? "success" : "danger")">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Bénéfice Total</h6>
                    <h3 class="text-@(ViewBag.Benefice >= 0 ? "success" : "danger") mb-0">
                        @if (ViewBag.Benefice != null)
                        {
                            @(((double)ViewBag.Benefice).ToString("N2")) <text>Ar</text>
                        }
                        else
                        {
                            <text>0.00 Ar</text>
                        }
                    </h3>
                </div>
            </div>
        </div>
    </div>

    @if (Model.ChiffresAffaires != null && Model.ChiffresAffaires.Any())
    {
        <h4 class="mb-3">Chiffres d'Affaires par Dobo</h4>
        <table class="table table-striped table-bordered mb-4">
            <thead class="table-dark">
            <tr>
                <th>Dobo</th>
                <th>Chiffre d'Affaires</th>
                <th>Prix Achat Poissons</th>
                <th>CA - Prix Achat Poissons</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.ChiffresAffaires)
            {
                <tr>
                    <td>@item.IdDobo</td>
                    <td>@item.ChiffreDaffaires.ToString("N2") Ar</td>
                    <td>@item.TotalPrixAchat.ToString("N2") Ar</td>
                    <td>@item.ChiffreDaffairesMoinsPrixAchat.ToString("N2") Ar</td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr class="table-success">
                <td><strong>Total</strong></td>
                <td><strong>@Model.ChiffresAffaires.Sum(x => x.ChiffreDaffaires).ToString("N2") Ar</strong></td>
                <td><strong>@Model.ChiffresAffaires.Sum(x => x.TotalPrixAchat).ToString("N2") Ar</strong></td>
                <td><strong>@Model.ChiffresAffaires.Sum(x => x.ChiffreDaffairesMoinsPrixAchat).ToString("N2") Ar</strong></td>
            </tr>
            </tfoot>
        </table>
    }
    else
    {
        <div class="alert alert-info mb-4">
            Aucun chiffre d'affaires disponible pour cette période.
        </div>
    }
    
    @if (Model.Depenses != null && Model.Depenses.Any())
    {
        <h4 class="mb-3">Dépenses aliments</h4>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
            <tr>
                <th>Dobo</th>
                <th>Prix Achat Aliment</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Depenses)
            {
                <tr>
                    <td>@item.IdDobo</td>
                    <td>@item.PrixTotal.ToString("N2") Ar</td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr class="table-info">
                <td ><strong>Total</strong></td>
                <td><strong>@Model.Depenses.Sum(x => x.PrixTotal).ToString("N2") Ar</strong></td>
            </tr>
            </tfoot>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Aucune donnée disponible pour cette période.
        </div>
    }
</div>