@model Pisciculture_dotnet2.Models.Nourrissage

@{
    ViewData["Title"] = "Create";
}

<h4>Nourrissage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAliment" class="control-label">Aliment</label>
                <select asp-for="IdAliment" class ="form-control" asp-items="ViewBag.IdAliment"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdDobo" class="control-label">Dobo</label>
                <select asp-for="IdDobo" class ="form-control" asp-items="ViewBag.IdDobo"></select>
            </div>
            <div class="form-group">
                <label asp-for="PoidsAliments" class="control-label">Poids</label>
                <input asp-for="PoidsAliments" type="number" min="0" class="form-control" />
                <span asp-validation-for="PoidsAliments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateNourrissage" class="control-label"></label>
                <input asp-for="DateNourrissage" type="date" class="form-control" />
                <span asp-validation-for="DateNourrissage" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
